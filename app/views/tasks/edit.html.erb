<%= form_with scope: :task, model: @task , locale: true do |f| %>

  <div>
    <% if @task.errors.any? %>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', categories_tasks_path, class: 'btn btn-outline-primary btn-sm', method: :get %>
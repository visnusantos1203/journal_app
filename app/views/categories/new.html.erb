<%= form_with scope: :category, model: @category, locale: true do |f| %>

  <div class="mb-3">
    <% if @category.errors.any? %>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="mb-3">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-outline-primary btn-sm' %>
  </div>

<% end %>

<%= link_to 'Back', categories_path, class: 'btn btn-outline-primary btn-lg', method: :get %>